
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzacı Stok Kontrol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <!-- CSS dosyalarınızı veya diğer stil bağlantılarını burada ekleyebilirsiniz -->
</head>
<body>
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">STKpizza</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                   
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("A"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin Sayfası</a>
                            </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="Index">Ürünler</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="TarifEkle">Tarif Oluştur</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="Siparis">Stok Güncelle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="TedarikciEkle"> Stok Ekle </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="StokGoruntule">Kalan Stok</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="KritikStok">
                               Kritik Stoklar  @await Component.InvokeAsync("StokSayisi")
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="UploadExcel">Excel İmport</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ExportExcel">Excel Export</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="HarcananUnMiktar">Harcanan Un Miktarı</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Urun" asp-action="PizzaSatisOranlari">Satış Oranları</a>
                        </li>

                     
                      
                    }

                   
                </ul>
                @if(User.Identity.IsAuthenticated)
                {
                    
                  
                    <ul class="navbar-nav ms-auto">

                        <!-- ms-auto sınıfını kullanarak bu bağlantıları sağa hizaladık -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">@User.FindFirst("Name")?.Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış<i class="fa-solid fa-right-from-bracket ms-2"></i></a>
                        </li>
                    </ul>
                    


                }
                else{
                <ul class="navbar-nav ms-auto">
                    
                    <!-- ms-auto sınıfını kullanarak bu bağlantıları sağa hizaladık -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login"> <i class="fa-solid fa-right-to-bracket me-2"></i>Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register"> <i class="fa-sharp fa-solid fa-user-plus me-2"></i>Kaydol</a>
                    </li>
                </ul>
                }
            </div>
        </div>
    </nav>

    
        @RenderBody() <!-- Sayfa içeriği bu satırda gösterilecek -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
</body>
</html>