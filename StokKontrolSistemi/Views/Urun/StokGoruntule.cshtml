@model List<StokKontrolSistemi.Entities.Malzemeler>
<!DOCTYPE html>
<html lang="en">
<head>
   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

 
    <title>Kalan Stok Ekranı</title>

 
    <link href="~/register/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
   
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  
    <link href="~/register/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

  
    <link href="~/register/css/main.css" rel="stylesheet" media="all">

    <style>
        html, body, .intro {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .gradient-custom-1 {
            background: #2c6ed5;
            border-radius: 0;
            padding: 20px;
        }

        table {
            background-color: transparent !important;
            border-radius: 15px;
        }

            table td, table th {
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
                border-radius: 10px;
            }

        .table-responsive {
            margin-top: 20px;
            border-radius: 10px;
        }


        tbody td {
            font-weight: 500;
            color: #999999;
        }
    </style>
</head>
<body>

    <section class="intro custom-section">
        <div class="gradient-custom-1 h-100">
            <div class="mask d-flex align-items-start h-100">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="table-responsive bg-white">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">Malzeme Adı</th>
                                            <th scope="col">Kalan Miktar</th>
                                            <th scope="col">Birim</th>                                         
                                            <th scope="col">Satın Alım Tarihi</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.MalzemeAdi</td>
                                                <td>@item.Stok</td>
                                                <td>@item.MalzemeTuru</td>
                                                <td>@item.AlımTarihi</td>
                                               

                                            </tr>
                                        }
                                      
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </section>

 
    <script src="~/register/vendor/jquery/jquery.min.js"></script>
   
    <script src="~/register/vendor/select2/select2.min.js"></script>
    <script src="~/register/vendor/datepicker/moment.min.js"></script>
    <script src="~/register/vendor/datepicker/daterangepicker.js"></script>

   
    <script src="~/register/js/global.js"></script>

</body>
</html>