@model TedarikciViewModel
<!DOCTYPE html>
<html lang="en">

<head>
   
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

   
    <title>Stok İşlemleri </title>

    <link href="~/register/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">

  
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


    <link href="~/register/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/register/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <link href="~/register/css/main.css" rel="stylesheet" media="all">
    <style>
        .close-btn {
            float: right;
            font-size: 24px; 
            font-weight: bold;
            cursor: pointer;
        }
    </style>
</head>

<body>

    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["AlertMessage"]
            <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
            <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
        </div>
    }

    <div class="page-wrapper bg-blue p-t-100 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Tedarikci Ve Stok  Ekleme Ekranı</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    <form method="POST">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="TedarikciName" class="label">Tedarikci Adı</label>
                                    <input asp-for="TedarikciName" class="input--style-4" type="text" name="TedarikciName">
                                    <span asp-validation-for="TedarikciName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="TedarikciAdres" class="label">Adres Girin</label>
                                    <input asp-for="TedarikciAdres" class="input--style-4" type="text" name="TedarikciAdres">
                                    <span asp-validation-for="TedarikciAdres" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group">
                                        <label asp-for="TedarikEdilenUrun" class="label">Tedarik Edilen ürÜn Adı</label>
                                        <input asp-for="TedarikEdilenUrun" class="input--style-4" type="text" name="TedarikEdilenUrun">
                                        <span asp-validation-for="TedarikEdilenUrun" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="input-group">
                                        <label asp-for="TedarikMiktari" class="label">Tedarik Edilen Miktar</label>
                                        <input asp-for="TedarikMiktari" class="input--style-4" type="text" name="TedarikMiktari">
                                        <span asp-validation-for="TedarikMiktari" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <div class="form-group">
                                        <label>Birim</label>
                                        @Html.DropDownListFor(model => model.SelectedUnit, new SelectList(Model.Units ?? new List<SelectListItem>(), "Value", "Text"), "Birim Seçiniz", new { @class = "form-control input--style-4" })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-space">
                           
                        </div>

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Stok Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="/Urun/YeniTedarikciEkle" class="btn btn-danger btn-lg">Var Olan Tedarikciyle Stok Ekle</a>
    </div>
    
    <script src="~/register/vendor/jquery/jquery.min.js"></script>
   
    <script src="~/register/vendor/select2/select2.min.js"></script>
    <script src="~/register/vendor/datepicker/moment.min.js"></script>
    <script src="~/register/vendor/datepicker/daterangepicker.js"></script>

    <script src="~/register/js/global.js"></script>

</body>

</html>
